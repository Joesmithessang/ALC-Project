<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:targetApi="LOLLIPOP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bbdedede"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/developer_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:orientation="horizontal"
            android:showDividers="none">

            <ImageView
                android:id="@+id/dev_image"
                android:layout_width="@dimen/list_item_dimen"
                android:layout_height="@dimen/list_item_dimen"
                android:padding="@dimen/image_padding"
                android:src="@drawable/thumbnail"
                tools:ignore="contentDescription" />


                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="serif-monospace"
                    android:textAppearance="?android:textAppearanceButton"
                    android:textStyle="bold" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/viewMargin"
            android:layout_marginRight="@dimen/viewMargin"
            android:background="@color/view" />

    </LinearLayout>
</android.support.v7.widget.CardView>